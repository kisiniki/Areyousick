<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F14242">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test your Sick here!"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama : "
        android:textSize="16dp"
        android:textColor="#FFF" />
    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_rectange_root"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umur : "
        android:textSize="16dp"
        android:textColor="#FFF"/>
    <EditText
        android:id="@+id/etUmur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@drawable/sp_rectange_root"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat : "
        android:textSize="16dp"
        android:textColor="#FFF"/>
    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_rectange_root"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gejala"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Apa saja Gejala yang anda alami?\n Silahkan beri centang! "
        android:textColor="#FFF"/>
    <TableLayout
        android:id="@+id/TabbleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/sp_rectange_root">

        <TableRow>
            <CheckBox
                android:id="@+id/cbNafas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nafas Pendek"
                android:textColor="#F14242"/>
            <CheckBox
                android:id="@+id/cbDemam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demam"
                android:layout_marginLeft="30dp"
                android:textColor="#F14242"/>
        </TableRow>

        <TableRow>
            <CheckBox
                android:id="@+id/cbBatuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batuk Kering"
                android:textColor="#F14242"/>
            <CheckBox
                android:id="@+id/cbSakitTubuh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit sekujur tubuh"
                android:layout_marginLeft="30dp"
                android:textColor="#F14242"/>
        </TableRow>

        <TableRow>
            <CheckBox
                android:id="@+id/cbTenggorokan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit Tenggorokan"
                android:textColor="#F14242"/>
            <CheckBox
                android:id="@+id/cbHidungTersumbat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hidung Tersumbat"
                android:layout_marginLeft="30dp"
                android:textColor="#F14242"/>
        </TableRow>
        <TableRow>
            <CheckBox
                android:id="@+id/cbKelelahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelelahan"
                android:textColor="#F14242"/>
            <CheckBox
                android:id="@+id/cbKehilanganBau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kehilangan Bau"
                android:layout_marginLeft="30dp"
                android:textColor="#F14242"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnHasilCovid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hasil!"
        android:layout_marginTop="10dp"
        android:background="@drawable/sp_rectange_root"
        android:textColor="#F14242"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah tau apa itu Covid-19 dan seberapa bahaya?"
        android:textSize="17dp"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:topRightRadius="20dp"
        android:bottomRightRadius="20dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp">
        <TableRow>
            <Button
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Info Covid-19   "
                android:background="@drawable/halfouvalleft"
                android:textColor="#F14242"/>
            <Button
                android:id="@+id/btnCallCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Call Center "
                android:onClick="CallCenter"
                android:layout_marginLeft="5dp"
                android:background="@drawable/halfouvalright"
                android:textColor="#F14242"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnOpenMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari RUmah Sakit"
        android:onClick="OpenMaps"
        android:background="@drawable/sp_rectange_root"
        />
</LinearLayout>
</ScrollView>